{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@utils": [
        "utils/index.ts"
      ],
      "@components/*": [
        "components/*"
      ],
      "@styles/*": [
        "styles/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
